@model ShippingDetails

@{
    Layout = "_Layout";
}

<h2>Checkout</h2>
<p>Please enter your details, and we'll ship the goods right away!</p>

<div class="text-danger">
    @Html.ValidationSummary()
</div>

@using (Html.BeginForm("Checkout", "Order", FormMethod.Post))
{
    <h3>Ship to</h3>
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address)
        @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.City)
        @Html.EditorFor(m => m.City, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.State)
        @Html.EditorFor(m => m.State, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Zip)
        @Html.EditorFor(m => m.Zip, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Country)
        @Html.EditorFor(m => m.Country, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <h3>Options</h3>
    <div class="checkbox">
        <label>
            @Html.EditorFor(m => m.Gift) Gift?
        </label>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Complete Order</button>
    </div>
}

